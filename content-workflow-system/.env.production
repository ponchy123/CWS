# 生产环境配置
PORT=5173
HOST=0.0.0.0

# 数据库配置
DATABASE_URL=postgresql://cws_user:your_secure_db_password_here@postgres:5432/content_workflow_system
POSTGRES_DB=content_workflow_system
POSTGRES_USER=cws_user
DB_PASSWORD=your_secure_db_password_here

# Redis配置
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_secure_redis_password_here

# JWT配置
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# API配置
VITE_API_URL=http://localhost:3000/api

# 第三方API配置
ZHIHU_API_KEY=your-zhihu-api-key
BILIBILI_API_KEY=your-bilibili-api-key
WECHAT_API_KEY=your-wechat-api-key
XIAOHONGSHU_API_KEY=your-xiaohongshu-api-key
DOUYIN_API_KEY=your-douyin-api-key

# AI服务配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# 文件存储配置
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10485760

# 邮件配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# 安全配置
VITE_ENABLE_HTTPS=false
VITE_CSRF_ENABLED=true

# 监控配置
VITE_ENABLE_MONITORING=true
ENABLE_MONITORING=true
LOG_LEVEL=info

# Grafana配置
GRAFANA_PASSWORD=your_secure_grafana_password_here
