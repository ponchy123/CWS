# 12-Factor App 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# ===== 应用基础配置 =====
NODE_ENV=development
PORT=3000

# ===== 服务器配置 =====
SERVER_PORT=3003
CLIENT_URL=http://localhost:5173

# ===== 数据库配置 =====
MONGODB_URI=mongodb://admin:password123@localhost:27017/content-workflow?authSource=admin

# ===== 认证配置 =====
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-2024-12factor
JWT_EXPIRES_IN=7d

# ===== 文件上传配置 =====
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# ===== 日志配置 =====
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_METRICS=false

# ===== API配置 =====
VITE_API_BASE_URL=http://localhost:3003
VITE_NEWSNOW_API_KEY=your_newsnow_api_key_here

# ===== 第三方服务配置 =====
OPENAI_API_KEY=your_openai_api_key_here
BAIDU_API_KEY=your_baidu_api_key_here
BAIDU_SECRET_KEY=your_baidu_secret_key_here

# ===== 支付配置 =====
ALIPAY_APP_ID=your_alipay_app_id_here
ALIPAY_PRIVATE_KEY=your_alipay_private_key_here
WECHAT_PAY_MCH_ID=your_wechat_pay_mch_id_here
WECHAT_PAY_API_KEY=your_wechat_pay_api_key_here

# ===== 监控配置 =====
METRICS_PORT=9090

# ===== Redis配置 =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_password_123

# ===== 邮件配置 =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# ===== 安全配置 =====
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== 缓存配置 =====
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ===== 文件存储配置 =====
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ===== 社交媒体配置 =====
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
WEIBO_APP_KEY=your_weibo_app_key
WEIBO_APP_SECRET=your_weibo_app_secret

# ===== 分析服务配置 =====
GOOGLE_ANALYTICS_ID=your_ga_tracking_id
BAIDU_ANALYTICS_ID=your_baidu_analytics_id

# ===== 开发工具配置 =====
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false