# 内容创作工作流系统 - 环境变量示例
# 复制此文件为 .env 并填入实际值

# 应用配置
NODE_ENV=development
PORT=3001
APP_NAME=Content Workflow System
APP_VERSION=1.0.0

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/content_workflow
REDIS_URL=redis://localhost:6379

# JWT 密钥
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# API 密钥
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key
BAIDU_API_KEY=your-baidu-api-key

# 社交媒体 API
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
WEIBO_API_KEY=your-weibo-api-key
WECHAT_API_KEY=your-wechat-api-key

# 支付配置
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
ALIPAY_APP_ID=your-alipay-app-id
WECHAT_PAY_MERCHANT_ID=your-wechat-pay-merchant-id

# 邮件服务
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# 文件存储
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# 监控配置
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# 安全配置
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 开发配置
DEBUG=content-workflow:*
MOCK_EXTERNAL_APIS=false

# 第三方服务配置
GITHUB_TOKEN=your-github-token
UNSPLASH_ACCESS_KEY=your-unsplash-access-key
WEATHER_API_KEY=your-weather-api-key

# 数据库连接池配置
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# 性能配置
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
COMPRESSION_ENABLED=true

# 安全配置
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CSRF_SECRET=your-csrf-secret-key

# 监控配置
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
PROMETHEUS_PORT=9090

# 缓存配置
REDIS_CLUSTER_ENABLED=false
CACHE_PREFIX=content_workflow
CACHE_COMPRESSION=true
